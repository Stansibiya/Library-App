@model IEnumerable<Library.core.Models.Book>

@{
    ViewBag.Title = "BooksList";
}

<div>
    <div id="table-wrapper" style="padding:5px;margin-bottom:5px" class="text-center">
        <h3 style="color:white;font-family: AngsanaUPC">Books</h3>
    </div>
    <div class="tbl-header" id="table-wrapper">
        <table cellpadding="0" cellspacing="0" border="0" id="table-wrapper">
            <thead> 
                <tr>
                    <th style="width:auto">#</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Year)
                    </th>
                    
                </tr>

            </thead>

            @{
                int count = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td style="width:5px">
                            @count
                        </td>
                        <td> 
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                    </tr>
                     count++;
                }

                  
            }
        </table>
        
    </div>
    <br/>
    <a href="/Library/Create" class="btn btn-primary">Add New Book</a>
    <a href="/Library/BooksList" class="btn btn-primary"><i class="glyphicon glyphicon-refresh"></i>&nbsp;Refresh List</a>
</div>



